@page "/deleteuser/{username}"

@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime

<h2>Delete User</h2>
@if (user != null)
{
    <p>Are you sure you want to delete this person with Name: <b>@user.username</b></p>
}
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" class="btn btn-primary" @onclick="@Delete" value="Delete" />
            <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />
        </div>
    </div>
</div>
@code {
    [Parameter]
    public string username { get; set; }

    UserViewModel user = new UserViewModel();
    protected override async Task OnInitializedAsync()
    {
        user = await Http.GetFromJsonAsync<UserViewModel>("api/user/" + username);
    }
    protected async Task Delete()
    {
        var response = await Http.DeleteAsync("api/user/" + username);
        bool deleteResponse = await response.Content.ReadFromJsonAsync<bool>();
        if (deleteResponse)
        {
            await JsRuntime.InvokeVoidAsync("alert", "Deleted Successfully!");
            NavigationManager.NavigateTo("user");
        }
        else
        {
            await JsRuntime.InvokeVoidAsync("alert", "Deleted Fail!");
        }

    }
    void Cancel()
    {
        NavigationManager.NavigateTo("user");
    }

}
